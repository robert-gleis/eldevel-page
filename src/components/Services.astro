---
import { content } from '../content/de.ts';
---

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const accordionButtons = document.querySelectorAll('[data-accordion-button]');
    
    accordionButtons.forEach(button => {
      button.addEventListener('click', () => {
        const targetId = button.getAttribute('data-accordion-target');
        if (!targetId) return;
        
        const content = document.getElementById(targetId) as HTMLElement;
        const icon = button.querySelector('[data-accordion-icon]') as HTMLElement;
        
        if (content && icon) {
          const isExpanded = content.style.maxHeight && content.style.maxHeight !== '0px';
          
          if (isExpanded) {
            content.style.maxHeight = '0px';
            content.style.opacity = '0';
            icon.style.transform = 'rotate(0deg)';
          } else {
            content.style.maxHeight = content.scrollHeight + 'px';
            content.style.opacity = '1';
            icon.style.transform = 'rotate(180deg)';
          }
        }
      });
    });
  });
</script>

<!-- Services Section -->
<section id="leistungen" class="section">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-16">
      <h2>{content.services.headline}</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {content.services.subheadline}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {content.services.items.map(service => (
        <div class="card card-body group p-8">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-primary-100 rounded-xl flex items-center justify-center group-hover:bg-primary-200 transition-colors mx-auto mb-4">
              <!-- Service Icons -->
              {service.icon === 'cog' && (
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {service.icon === 'factory' && (
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
              )}
            </div>
            <h3 class="text-2xl font-bold mb-3">{service.title}</h3>
            <p class="text-gray-600 text-lg mb-6">{service.description}</p>
          </div>
          
          <div class="space-y-2">
            {service.features && service.features.map((feature, index) => {
              const accordionId = `accordion-${service.title.toLowerCase().replace(/\s+/g, '-')}-${index}`;
              return (
                <div class="border border-gray-200 rounded-lg overflow-hidden">
                  <button 
                    class="w-full flex items-center justify-between p-4 text-left hover:bg-gray-50 transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-inset"
                    data-accordion-button
                    data-accordion-target={accordionId}
                  >
                    <div class="flex items-center space-x-3">
                      <div class="w-2 h-2 bg-primary-500 rounded-full flex-shrink-0"></div>
                      <span class="text-gray-700 font-medium">{feature.name}</span>
                    </div>
                    <svg 
                      class="w-5 h-5 text-gray-400 transition-transform duration-200" 
                      data-accordion-icon
                      fill="none" 
                      stroke="currentColor" 
                      viewBox="0 0 24 24"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>
                  <div 
                    id={accordionId}
                    class="overflow-hidden transition-all duration-300 ease-in-out"
                    style="max-height: 0px; opacity: 0;"
                  >
                    <div class="p-4 pt-0 text-gray-600 text-sm leading-relaxed">
                      {feature.description}
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
