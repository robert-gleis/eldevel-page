---
import { content } from '../content/de.ts';
---

<!-- Hero Section -->
<section id="hero" class="section relative overflow-hidden">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Hero Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-gradient animate-fade-in">
            {content.hero.headline}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
            {content.hero.subheadline}
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-4 animate-slide-up">
          <a href="#kontakt" class="btn-primary">
            {content.hero.cta_primary}
          </a>
          <a href="#leistungen" class="btn-outline">
            {content.hero.cta_secondary}
          </a>
        </div>

        <!-- Key Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200 dark:border-gray-700">
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">20+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Jahre Erfahrung</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">2011</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Seit selbstÃ¤ndig</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">ISO</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">9001:2015</div>
          </div>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative">
        <div class="relative overflow-hidden rounded-2xl shadow-2xl">
          <img 
            src="/images/hero-pcb.jpg" 
            alt="Professionelle PCB-Entwicklung bei eldevel"
            class="w-full h-[400px] lg:h-[500px] object-cover"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-4 -left-4 bg-white dark:bg-gray-800 rounded-xl p-4 shadow-lg animate-bounce-soft">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-sm font-medium">Altium Designer</span>
          </div>
        </div>
        
        <div class="absolute -bottom-4 -right-4 bg-white dark:bg-gray-800 rounded-xl p-4 shadow-lg animate-bounce-soft" style="animation-delay: 0.5s;">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-accent-500 rounded-full"></div>
            <span class="text-sm font-medium">EMV-Tests</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
