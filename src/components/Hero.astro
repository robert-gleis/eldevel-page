---
import { content } from '../content/de.ts';

// Helper function to build correct asset paths
const getAssetPath = (path: string) => {
  const baseUrl = import.meta.env.BASE_URL;
  // Remove trailing slash from baseUrl if it exists
  const cleanBaseUrl = baseUrl.endsWith('/') ? baseUrl.slice(0, -1) : baseUrl;
  return cleanBaseUrl + '/' + (path.startsWith('/') ? path.slice(1) : path);
};
---

<!-- Hero Section -->
<section id="hero" class="section relative overflow-hidden">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Hero Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-gradient animate-fade-in">
            {content.hero.headline}
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            {content.hero.subheadline}
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-4 animate-slide-up">
          <a href="#kontakt" class="btn-primary">
            {content.hero.cta_primary}
          </a>
          <a href="#leistungen" class="btn-outline">
            {content.hero.cta_secondary}
          </a>
        </div>

        <!-- Key Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">20+</div>
            <div class="text-sm text-gray-600">Jahre Erfahrung</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">2011</div>
            <div class="text-sm text-gray-600">Seit selbständig</div>
          </div>
          <div class="text-center relative group">
            <a href="#qualitaet" class="inline-flex items-center space-x-2 p-2 rounded-lg transition-all duration-300 group-hover:bg-primary-50 cursor-pointer">
              <svg class="w-5 h-5 text-yellow-500 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <div class="text-2xl font-bold text-primary-600">ISO</div>
                <div class="text-sm text-gray-600">9001:2015</div>
              </div>
            </a>
            <!-- Tooltip -->
            <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap z-10">
              Mehr zur Qualitätszertifizierung
              <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative">
        <div class="relative overflow-hidden rounded-2xl shadow-2xl">
          <img 
            src={getAssetPath("images/hero-pcb.jpg")} 
            alt="Professionelle PCB-Entwicklung bei eldevel"
            class="w-full h-[400px] lg:h-[500px] object-cover"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
        
      </div>
    </div>
  </div>
</section>
