<!-- Contact Section -->
<section id="kontakt" class="section bg-gray-50">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-16">
      <h2>{content.contact.headline}</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {content.contact.subheadline}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-1 gap-12">
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="card card-body">
          <h3 class="text-xl font-semibold mb-6">Kontaktinformationen</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-primary-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <div class="font-medium">{content.contact.info.company}</div>
                <div class="text-gray-600">{content.contact.info.owner}</div>
                <div class="text-gray-600">
                  {content.contact.info.address.street}<br/>
                  {content.contact.info.address.city}, {content.contact.info.address.country}
                </div>
              </div>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <a href="tel:+4946149433910" class="text-primary-600 hover:text-primary-700">
                {content.contact.info.phone}
              </a>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <a href="mailto:info@eldevel.de" class="text-primary-600 hover:text-primary-700">
                {content.contact.info.email}
              </a>
            </div>
            
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-gray-600">{content.contact.info.hours}</span>
            </div>
          </div>
        </div>
