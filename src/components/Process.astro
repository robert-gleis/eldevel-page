---
import { content } from '../content/de.ts';
---

<!-- Process Section -->
<section id="prozess" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center space-y-4 mb-16">
      <h2>{content.process.headline}</h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {content.process.subheadline}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      {content.process.steps.map((step, index) => (
        <div class="relative text-center">
          <div class="mb-6">
            <div class="w-16 h-16 bg-primary-500 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
              {step.number}
            </div>
            <h3 class="text-lg font-semibold mb-3">{step.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">{step.description}</p>
          </div>
          
          {/* Arrow for desktop */}
          {index < content.process.steps.length - 1 && (
            <div class="hidden lg:block absolute top-8 left-full w-8 transform translate-x-4">
              <svg class="w-8 h-8 text-primary-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
